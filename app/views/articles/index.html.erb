<h1> List of all Articles </h1>

<p>
	<%= link_to 'Create New Article', new_article_path %>

<table>
<tr>
	<th>Title</th>
	<th>Text</th>
	<th colspan= "3">Editing Options</th>
</tr>
<% @articles.each do |article| %>

<tr>
	<td><%= article.title %></td>
	<td><%= truncate(article.text, length: 75) %></td>
	<td><%= link_to 'Show Article', article_path(article) %>
	<td><%= link_to 'Edit Article', edit_article_path(article) %></td>
	<td><%= link_to 'Delete Article', article_path(article), method: :Delete, data: {confirm: 'Sure to delete?'} %></td>
</tr>

<% end %>
</table>

<p> <%= link_to 'Main Page', welcome_index_path %></p>