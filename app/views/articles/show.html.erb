<div class="row">
<div class="col"></div>
<div class="col-md-10">

<%= image_tag 'sky.jpeg', style:"width:100%" %>


<p><strong>Title:</strong>

	<%= @article.title %>

</p>

<p>
	<%= @article.created_at.strftime('%A %-b %-d,%Y | %l:%M %p') %>
</p>

<p><strong>Text:</strong>
	<%= @article.text %>
</p>

<hr>
<h2> Comments </h2>
	<% @article.comments.each do |comment| %>
	<p>
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	</p>
	<p>
		<strong>Comments:</strong>
		<%= comment.body %>

	</p>
	<p>

		<%= link_to 'Delete Comment', [comment.article,comment], method: :Delete,
			data: {confirm: 'Delete comment?'} %>

	</p>

	<% end %>



<hr>
<h2> Add Comment </h2>
	<%= form_for([@article, @article.comments.build]) do |f|%>
<div class="field" style="100%;">
<p>

	<%= f.label :commenter %><br>
	<%= f.text_field :commenter, class:'form-control' %>

</p>

<p>

	<%= f.label :body %><br>
	<%= f.text_area :body, class:'form-control' %><br>

</p>

<p> 
	<%= f.submit class:"btn btn-info" %>
</p>
</div>
<% end %>



<p><%= link_to 'Article List', articles_path, class:"btn btn-link" %>

<%= link_to 'Main Page', welcome_index_path, class:"btn btn-link" %></p>

</div>
<div class="col"></div>
</div>