<h2> Comments </h2>
	<% @article.comments.each do |comment| %>
	<p>
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	</p>
	
	<p>
		<%= comment.created_at %>
	</p>

	<p>
		<strong>Comments:</strong>
		<%= comment.body %>

	</p>

	<p>

		<%= link_to 'Delete Comment', [comment.article,comment], method: :Delete,
			data: {confirm: 'Delete comment?'} %>

	</p>

	<% end %>